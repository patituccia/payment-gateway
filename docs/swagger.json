{
  "openapi": "3.0.1",
  "info": {
    "title": "PaymentGateway",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://localhost:5001"
    }
  ],
  "paths": {
    "/api/Payments": {
      "post": {
        "tags": [
          "Payments"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaymentRequestDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentResponseDto"
                }
              }
            }
          }
        }
      },
      "get": {
        "tags": [
          "Payments"
        ],
        "parameters": [
          {
            "name": "acquiringBankPaymentId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaymentDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "PaymentDto": {
        "required": [
          "amount",
          "currency",
          "expiryDate",
          "maskedCardNumber",
          "status",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "maskedCardNumber": {
            "type": "string"
          },
          "expiryDate": {
            "type": "string",
            "format": "date-time"
          },
          "amount": {
            "type": "number",
            "format": "currency"
          },
          "currency": {
            "pattern": "^[A-Z]{3}$",
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "PaymentRequestDto": {
        "required": [
          "amount",
          "cardHolderName",
          "cardNumber",
          "currency",
          "cvv",
          "expiryDate",
          "merchantId"
        ],
        "type": "object",
        "properties": {
          "merchantId": {
            "maximum": 2147483647,
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "cardHolderName": {
            "type": "string"
          },
          "cardNumber": {
            "type": "string",
            "format": "credit-card"
          },
          "expiryDate": {
            "type": "string",
            "format": "date-time"
          },
          "amount": {
            "type": "number",
            "format": "currency"
          },
          "currency": {
            "pattern": "^[A-Z]{3}$",
            "type": "string"
          },
          "cvv": {
            "pattern": "^[0-9]{3,4}$",
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "PaymentResponseDto": {
        "required": [
          "acquiringBankPaymentId",
          "status",
          "timestamp"
        ],
        "type": "object",
        "properties": {
          "acquiringBankPaymentId": {
            "type": "string"
          },
          "status": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}